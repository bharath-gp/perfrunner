[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest
title = N1QL Q3 Array Indexing 1Bux20Mx1K, Range Scan, 30KSops, GSI, stale=ok, MOI
summary = N1QL Q3 Array Indexing Range Scan, 30KSops
larger_is_better = false

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[bucket]
replica_number = 1
password =
eviction_policy = valueOnly

[load]
items = 20000000
size = 1024
workers = 20
doc_gen = reverse_lookup_array_indexing
doc_partitions = 1

[secondary]
indexer.settings.compaction.compaction_mode = full

[n1ql]
indexes =
    by_achievements2::CREATE INDEX {name} ON `{bucket}`(DISTINCT ARRAY i FOR i IN achievements2 END) using gsi;

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 24
time = 1200
n1ql_queries = singleton-unique-lookup
n1ql_throughput = 1000000
n1ql_workers = 96

[n1ql-singleton-unique-lookup]
prepared = singleton_unique_lookup
statement = SELECT name AS _name, street AS _street FROM `bucket-1` WHERE ANY i IN achievements2 SATISFIES i=$1 END;
scan_consistency = not_bounded
args = [{achievements2[0]}]